model Payment {
    id String @id @default(uuid(7))

    appointmentId      String        @unique
    appointment        Appointment   @relation(fields: [appointmentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    amount             Float
    transitionId       String @unique
    paymentGatewayDate Json?
    status             PaymentStatus

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([appointmentId], name: "idx_payment_appointmentId")
    @@index([transitionId], name: "idx_payment_transitionId")
    @@map("payments")
}
