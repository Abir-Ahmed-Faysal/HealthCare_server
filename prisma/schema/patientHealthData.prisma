model Patient_Health_Data {
    id String @id @default(uuid(7))

    height           String
    weight           String
    dateOfBirth      String
    gender           Gender
    bloodGroup       BloodGroup
    dasAllergies     Boolean
    hsaDiabetes      Boolean
    smokingStatus    Boolean
    recentAnxiety    String
    recentDepression String
    hasPastSurgery   Boolean
    pregnancyStatus  Boolean
    maritalStatus    Boolean
    patientId        String     @unique
    patient          Patient    @relation(fields: [patientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    bloodPressure    String
    bloodSugar       String
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt

    @@index([patientId])
    @@map("patient_health_data")
}
